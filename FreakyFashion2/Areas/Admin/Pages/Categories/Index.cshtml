@page
@model FreakyFashion2.Areas.Admin.Pages.Categories.IndexModel
@{
}

<h1>List categories</h1>
<div class="row">
    <div class="col">
        <a href="/admin/categories/New" class="btn btn-primary float-right">Add</a>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Number of products</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.ProductCategory.Count()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>