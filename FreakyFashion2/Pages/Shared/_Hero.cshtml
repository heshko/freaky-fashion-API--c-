@using FreakyFashion2.Models
@model List<Product>

<div class="container mb-4 ">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            @foreach (var product in Model)
            {
                if (product.Id == 1)
                {
                    <div class="carousel-item active row">
                        <div class="col-6 float-left pt-4 ">
                            <ul class="list-group pt-4">
                                <li class="list-group-item  border-0">Name: @product.Name</li>

                                <li class="list-group-item  border-0">Description: @product.Description</li>

                                <li class="list-group-item  border-0">Price: @product.Price</li>

                              

                                <li class="list-group-item  border-0">
                                    <a class="btn btn-dark" asp-page="/Product" asp-route-UrlSlug="@product.UrlSlug" >
                                        show
                                    </a>
                                </li>
                            </ul>


                        </div>
                        <div class="col-6 float-left">
                            <img src="@product.ImageUrl" class="d-block w-100" alt="...">
                        </div>

                    </div>
                }
                else
                {
                    <div class="carousel-item  row">
                        <div class="col-6 float-left pt-4 ">
                            <ul class="list-group pt-4">
                                <li class="list-group-item  border-0">Name: @product.Name</li>

                                <li class="list-group-item  border-0">Description: @product.Description</li>

                                <li class="list-group-item  border-0">Price: @product.Price</li>

                              

                                <li class="list-group-item  border-0">
                                    <a class="btn btn-dark" asp-page="/Product" asp-route-UrlSlug="@product.UrlSlug" >
                                        show
                                    </a>
                                </li>
                            </ul>


                        </div>
                        <div class="col-6 float-left">
                            <img src="@product.ImageUrl" class="d-block w-100" alt="...">
                        </div>

                    </div>
                }
            }

        </div>

        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>

<style>
    img.d-block.w-100 {
        height: 500px;
    }
</style>