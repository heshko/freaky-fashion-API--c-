
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreakyFashion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white ">
            <div class="container justify-content-lg-start  ">

                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="https://www.onlinelogomaker.com/blog/wp-content/uploads/2017/06/fashion-logos.jpg" width="100" height="80" alt="">
                </a>
                <form method="get" class="form-inline" >
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" name="q" >
                    <button class="btn btn-dark" asp-page="/Search">Search</button>
                </form>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="LoggIn shoppIcon flex-grow-1 ">
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-white  border-bottom  mb-3">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                <ul class="navbar-nav flex-grow-1 justify-content-center">
                    <li class="nav-item mr-4 ">
                        <a class="nav-link text-primary" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item mr-4 ">
                        <a class="nav-link text-primary" asp-route-name="Sale" asp-page="/CatagoryProducts">Sale</a>
                    </li>
                    <li class="nav-item mr-4 ">
                        <a class="nav-link text-primary" asp-route-name="Dresses" asp-page="/CatagoryProducts">Dresses</a>
                    </li>
                    <li class="nav-item mr-4 ">
                        <a class="nav-link text-primary" asp-route-name="Trouthers" asp-page="/CatagoryProducts">Trouthers</a>
                    </li>
                    <li class="nav-item mr-4 ">
                        <a class="nav-link text-primary" asp-route-name="T-Shirts" asp-page="/CatagoryProducts">T-Shirts</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top  ">
        <div class="container">
            <ul class="list-group list-group-horizontal ">
                <li class="list-group-item border-0 ">Gratis frakt and returer</li>
                <li class="list-group-item border-0">ExpressFrakt</li>
                <li class="list-group-item border-0">Sakra Betalningar</li>
                <li class="list-group-item border-0">Nyheter Varje Dag</li>
            </ul>
            <div class="row">
                <ul class="col-4">
                    <li class="text-primary">Gratis frakt and returer</li>
                    <li  class="text-primary">ExpressFrakt</li>
                    <li  class="text-primary">Sakra Betalningar</li>
                    <li  class="text-primary">Nyheter Varje Dag</li>
                </ul>
                <ul class="col-4">
                    <li class="text-primary">Gratis frakt and returer</li>
                    <li class="text-primary">ExpressFrakt</li>

                </ul>
            </div>

            <h1 class="text-center">CopyRight 2020 Freaky Fashion</h1>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
