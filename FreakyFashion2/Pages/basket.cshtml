@page
@model FreakyFashion2.basketModel
@{
    ViewData["Title"] = "basket";
}


<h1>Basket</h1>


<div class="row">
    <div class="col">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Price</th>
                    <th>Antal</th>
                    <th>Totalt</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Product in Model.Products)
                {
                    <tr>
                        <td><div class="card mb-3" style="max-width: 540px;">
                            <div class="row no-gutters">
                              <div class="col-md-4">
                             <img src="@Product.ImageUrl" class="card-img" alt="...">
                            </div>
                           <div class="col-md-8">
                           <div class="card-body">
                          <h5 class="card-title">@Product.Name</h5>
                          <p class="card-text">@Product.ProductNumber</p>

                           </div>
                        </div>
                        </div>
                        </div></td>
                        <td>@Product.Price</td>
                        <td >
                            <input type="text"  name="name" value="1" placeholder="1" class="col-2" />
                        </td>
                        <td>@Product.Price kr</td>
                    
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row justify-content-center">
   <a class="btn btn-dark" asp-page="/CheckOut" >Buy</a> 
</div>